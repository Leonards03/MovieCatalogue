<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ReminderSettingsActivity">

    <TextView
        android:id="@+id/tv_daily_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Release Reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_daily_reminder_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Reminder showing the movie that released today"
        app:layout_constraintTop_toBottomOf="@id/tv_release_reminder"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/daily_reminder_switch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_release_reminder_description"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_release_reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Release Reminder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_release_reminder_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Reminder showing the movie that released today"
        app:layout_constraintTop_toBottomOf="@id/tv_release_reminder"
        app:layout_constraintStart_toStartOf="parent"/>

    <Switch
        android:id="@+id/release_reminder_switch"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/tv_release_reminder_description"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>